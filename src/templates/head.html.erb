<script type="application/javascript">
    $(document).ready(function() {
        let hide_email = function(e) {
            if ($(e.target).hasClass('fa-envelope')) { return false; }
            $('.email-popup').hide();
            $('.email').click(show_email);
            $('body').unbind('click');
        };
        let show_email = function() {
            $('.email-popup').show();
            $('.email').unbind('click');
            $('body').click(hide_email);
        };
        $('.email').click(show_email);
    });
</script>

